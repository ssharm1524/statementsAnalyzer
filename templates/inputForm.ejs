<!doctype html>
<html lang="en">

<head>
	<meta charset="utf-8" />
	<title>Input Form</title>
</head>

<body>
	<h1>Add A New Statement</h1>
  <form id = 'app' action='http://localhost:3000/inputForm' method="post" enctype="multipart/form-data">
    <fieldset>
			<label>Whats your email address?: <input type="email" name="email"  placeholder="example@notreal.com" required></label>
      <br>
      <br>
      <label>Add your statement. Bank of America CSV files are the only supported format at this time: <input type="file" name="statement"/></label>
      <br>
      <br>
    </fieldset>
    <br>
    <input type = "reset" value = "Reset">
    <input type = "submit" value = "Submit Statement" onclick="check(); return false;">
  </form>
  
	<hr>
  <a href = "/"><u>HOME</u></a>
</body>

<script>
  const check = () => {
    let res = confirm('Are you sure you want to submit your statement?');
    if (res) {
      document.getElementById('app').submit();
    }
  }
</script>

</html>